@model aver.Models.SuggestionItem

<div class="col-md-6 mb-4">
    <!--Card-->
    <
    <div class="card">


        <div class="card-header">@Model.Title</div>

        <div class="card-img-top card-image-main img-breakfast">
        </div>

        <!--Card content-->
        <div class="card-body">

            <!-- Table  -->
            <table class="table table-hover">
                <!-- Table head -->
                <thead class="blue-grey lighten-4">
                    <tr>
                        <th>#</th>
                        <th>
                            Nafn
                        </th>
                        <th>
                            Útaf
                        </th>
                    </tr>
                </thead>
                <!-- Table head -->
                <!-- Table body -->
                <tbody>
                    @foreach (var food in Model.Foods)
                    {
                        <tr>
                            <th scope="row">1</th>
                            <td>@food.FoodName</td>
                            <td>@food.Explanation</td>
                        </tr>
                    }
                    
                </tbody>
                <!-- Table body -->
            </table>
            <!-- Table  -->

        </div>

    </div>
    <!--/.Card-->

</div>