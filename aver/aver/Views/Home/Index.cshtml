                            </tbody>
                            <!-- Table body -->
                        </table>
                        <!-- Table  -->

                    </div>

                </div>
                <!--/.Card-->

            </div>
            <!--Grid column-->

            <div class="col-md-6 mb-4">
                <!--Card-->
                <div class="card">


                    <div class="card-header">Suggested breakfast</div>

                        <div class="card-img-top card-image-main img-breakfast" >

                <a href="@Url.Action("Detail", "", new { type="breakfast" })">
