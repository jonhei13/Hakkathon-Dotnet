@model aver.core.Models.SuperModel


@{
    ViewBag.Title = "Home Page";
}

<main class="pt-5 mx-lg-5">
    <div class="container-fluid mt-5">
       
        <div class="row wow fadeIn" style="visibility: visible; animation-name: fadeIn;">

            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">Your status</div>
                    <!--Card content-->
                    <div class="card-body">

                        <!-- List group links -->
                        <div class="list-group list-group-flush">
                            <a class="list-group-item list-group-item-action waves-effect">
                                Weight
                                <span class="badge badge-danger badge-pill pull-right">
                                    80kg
                                    <i class="fas fa-arrow-up ml-1"></i>
                                </span>
                            </a>
                            <a class="list-group-item list-group-item-action waves-effect">
                                Height
                                <span class="badge badge-default badge-pill pull-right">
                                    186cm
                                    <i class="ml-1"></i>
                                </span>
                            </a>
                            <a class="list-group-item list-group-item-action waves-effect">
                                Blood pressure
                                <span class="badge badge-danger badge-pill pull-right">
                                    182
                                    <i class="fas fa-arrow-up ml-1"></i>
                                </span>
                            </a>
                            <a class="list-group-item list-group-item-action waves-effect">
                                Days since last doctor visit
                                <span class="badge badge-primary badge-pill pull-right">34 days</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">Financial status</div>
                    <!--Card content-->
                    <div class="card-body"> 
                        <!-- List group links -->
                        <div class="list-group list-group-flush">
                            <a class="list-group-item list-group-item-action waves-effect">
                                Monthly salary
                                <span class="badge badge-default badge-pill pull-right">
                                    100.000 kr
                                </span>
                            </a>
                            <a class="list-group-item list-group-item-action waves-effect">
                                Total monthly budget
                                <span class="badge badge-default badge-pill pull-right">
                                    180.000 kr
                                </span>
                            </a>
                            <a class="list-group-item list-group-item-action waves-effect">
                                Suggested food spending budged
                                <span class="badge badge-default badge-pill pull-right">
                                    80.000 kr
                                    <i class="ml-1"></i>
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
       



        <div class="row wow fadeIn" style="visibility: visible; animation-name: fadeIn;">
